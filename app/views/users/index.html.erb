<p style="color: green"><%= notice %></p>

<h1><%= t('ユーザー一覧', name: i18n_pluralize(Book.model_name.human)) %></h1>

<div id="users" class="index-items">
  <% @users.each do |user| %>
    <div class="index-item">
      <%= render user %>
      <p>
        <%= link_to 'ユーザー詳細へ', "users/#{user.id}" %>
      </p>
    </div>
  <% end %>
</div>

<%#= paginate @users %>
