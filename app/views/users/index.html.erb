<p style="color: green"><%= notice %></p>

<h1><%= t('views.common.title_index', name: i18n_pluralize(User.model_name.human)) %></h1>

<div id="users" class="index-items">
  <% @users.each do |user| %>
    <div class="index-item">
      <p>
        <strong><%= User.human_attribute_name(:email) %>:</strong>
        <%= user.email %>
      </p>
      <p>
        <%= link_to t('views.common.show', name: User.model_name.human.downcase), "users/#{user.id}" %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @users %>

<nav class="page-nav">
  <%= link_to t('views.common.back', name: i18n_pluralize(Book.model_name.human.downcase)), books_path %>
</nav>
