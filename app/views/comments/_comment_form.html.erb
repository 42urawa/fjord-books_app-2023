<%= form_with(model: comment) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= t('views.common.validation_error', errors: i18n_error_count(comment.errors.count), name: Comment.model_name.human.downcase) %>:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body, required: true %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :commentable_id, value: commentable_id ||= @comment.commentable_id %>
    <%= form.hidden_field :commentable_type, value: commentable_type ||= @comment.commentable_type %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
