<%#= commentable %>
<%#= comment %>
<%#= p commentable_type %>
<%#= @report %>

<%= form_with(model: comment) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :commentable_id, value: commentable_id ||= @comment.commentable_id %>
    <%= form.hidden_field :commentable_type, value: commentable_type ||= @comment.commentable_type %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>



<br>

<div>
  <%= link_to "Back to reports", reports_path %>
</div>
